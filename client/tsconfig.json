{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "paths": {
      "@routes/*": ["./src/routes/*"],
      "@components/*": ["./src/components/*"],
      "@reducers/*": ["./src/reducers/*"],
      "@services/*": ["./src/services/*"],
      "@store": ["./src/store"],
      "@types": ["./src/types"],
      "@theme": ["./src/theme"]
    },
    "jsx": "react",
    "strict": false,
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "Node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "strictBindCallApply": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "preserveConstEnums": true,
    "allowJs": true,
    "skipLibCheck": true
  },
  "filesGlob": [
    "typings/index.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "node_modules/typescript/lib/lib.es6.d.ts",
    "types/global.d.ts",
    "types/env.d.ts"
  ],
  "types": [
    "react",
    "react-dom",
    "react-native"
  ],
  "exclude":[
    "build",
    "node_modules",
    "jest.config.js",
    "App.ts"
  ],
  "compileOnSave": false
}
